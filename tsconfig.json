{
  "compilerOptions": {
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "es2015",
    "strict": true,
    "downlevelIteration": true,
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "lib": [
      "es2019"
    ],
    "noEmit": true,
    "sourceMap": true,
    "outDir": "dist/",
    "module": "commonjs",
    "isolatedModules": false,
    "baseUrl": "./",
    "paths": {
      "@/controllers/*": [
        "./src/controllers/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
  ],
  "include": [ "src" ]
}